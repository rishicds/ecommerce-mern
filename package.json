{
  "name": "vapeee-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for Vapeee ecommerce application",
  "private": true,
  "type": "module",
  "scripts": {
    "install-all": "npm install",
    "dev": "npm run dev --workspaces",
    "build": "npm run build-frontend && npm run build-admin && npm run build-backend",
    "start": "npm run start-backend",
    "build-backend": "echo 'Backend ready'",
    "build-frontend": "cd frontend && npm run build",
    "build-admin": "cd admin && npm run build",
    "start-backend": "cd backend && npm start",
    "start-frontend": "cd frontend && npm run dev",
    "start-admin": "cd admin && npm run dev"
  },
  "workspaces": [
    "backend",
    "frontend",
    "admin"
  ]
}